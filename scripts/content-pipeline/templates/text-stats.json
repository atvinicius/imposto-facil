{
  "name": "ImpostoFacil Stats/Pattern Interrupt",
  "description": "Template for videos with big statistics (e.g., Script 11: '83%')",
  "format": {
    "width": 1080,
    "height": 1920,
    "fps": 30,
    "duration": 20
  },
  "use_case": "Scripts with big numbers/stats that grab attention",
  "elements": [
    {
      "name": "Background",
      "type": "shape",
      "shape": "rectangle",
      "fill_color": "#0f172a",
      "width": "100%",
      "height": "100%"
    },
    {
      "name": "Audio-1",
      "type": "audio",
      "source": "placeholder.mp3"
    },
    {
      "name": "Big-Number",
      "type": "text",
      "text": "83%",
      "font_family": "Inter",
      "font_weight": "900",
      "font_size": "200 px",
      "fill_color": "#ef4444",
      "x": "50%",
      "y": "35%",
      "x_alignment": "50%",
      "y_alignment": "50%",
      "time": 0,
      "duration": 5,
      "animations": [
        {
          "type": "scale",
          "start_scale": "150%",
          "duration": 0.5,
          "easing": "ease-out-back"
        }
      ]
    },
    {
      "name": "Explanation-Text",
      "type": "text",
      "text": "dos empresários brasileiros\nnão entendem a reforma tributária",
      "font_family": "Inter",
      "font_weight": "600",
      "font_size": "48 px",
      "fill_color": "#ffffff",
      "x": "50%",
      "y": "55%",
      "width": "85%",
      "x_alignment": "50%",
      "y_alignment": "50%",
      "text_alignment": "center",
      "line_height": "130%",
      "time": 2,
      "duration": 8,
      "animations": [
        {
          "type": "text-appear",
          "split": "line",
          "duration": 0.8,
          "background_effect": "highlight"
        }
      ]
    },
    {
      "name": "Secondary-Stat",
      "type": "text",
      "text": "72% nem começaram a se preparar",
      "font_family": "Inter",
      "font_weight": "500",
      "font_size": "40 px",
      "fill_color": "#f97316",
      "x": "50%",
      "y": "70%",
      "width": "85%",
      "x_alignment": "50%",
      "y_alignment": "50%",
      "text_alignment": "center",
      "time": 8,
      "duration": 5,
      "animations": [
        {
          "type": "fade",
          "fade_in_duration": 0.3
        }
      ]
    },
    {
      "name": "CTA",
      "type": "text",
      "text": "Não seja uma estatística.\nLink na bio.",
      "font_family": "Inter",
      "font_weight": "700",
      "font_size": "44 px",
      "fill_color": "#22c55e",
      "x": "50%",
      "y": "85%",
      "width": "80%",
      "x_alignment": "50%",
      "y_alignment": "50%",
      "text_alignment": "center",
      "line_height": "130%",
      "time": 13,
      "duration": 7,
      "animations": [
        {
          "type": "fade",
          "fade_in_duration": 0.5
        }
      ]
    },
    {
      "name": "Logo",
      "type": "text",
      "text": "ImpostoFacil",
      "font_family": "Inter",
      "font_weight": "600",
      "font_size": "24 px",
      "fill_color": "rgba(255, 255, 255, 0.4)",
      "x": "50%",
      "y": "96%",
      "x_alignment": "50%",
      "y_alignment": "50%"
    }
  ]
}
